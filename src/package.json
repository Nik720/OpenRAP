{
  "name": "OpenRAP",
  "version": "1.0.0",
  "description": "OpenRAP Software",
  "main": "dist/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc && cp env.json ./dist && cp package.json ./dist",
    "test": "mocha -r ts-node/register **/*.spec.ts *.spec.ts",
    "start": "./node_modules/.bin/pm2 start index.js --name 'app'",
    "stop": "./node_modules/.bin/pm2 stop 'app'",
    "electron-start": "electron main",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "local.sunbird.desktop",
    "asar": false,
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": false
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@project-sunbird/ext-framework-server": "0.1.19",
    "archiver": "^3.0.0",
    "body-parser": "^1.18.2",
    "chokidar": "^3.0.0",
    "decompress-zip": "^0.2.2",
    "dns": "^0.2.2",
    "express": "^4.16.3",
    "fs-extra": "^7.0.1",
    "lodash": "^4.17.11",
    "nano": "^8.1.0",
    "openrap-sunbirded-plugin": "0.0.6",
    "su-downloader3": "^1.0.8",
    "typescript-ioc": "^1.2.5"
  },
  "devDependencies": {
    "@types/archiver": "^2.1.3",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^5.0.5",
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.9",
    "@types/unzipper": "^0.9.1",
    "chai": "^4.2.0",
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0",
    "mocha": "^6.1.4",
    "ts-node": "^8.1.0",
    "typescript": "^2.8.4"
  }
}
